{% extends 'base.html.twig' %}

{% block body %}
    <h1>liste de contacts</h1>

    <table class="table table-striped">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prenom</th>
                <th  style="width: 30%">Action</th>

            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>

                <td>
                    <a href="{{ path('contact_show', { 'id': contact.id }) }}" class="btn btn-info" role="button"><span class="glyphicon glyphicon-search"></span>   Afficher</a>
                    <a href="{{ path('contact_edit', { 'id': contact.id }) }}" class="btn btn-info" role="button"><span class="glyphicon glyphicon-pencil"></span>   modifier</a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('contact_new') }}"class="btn btn-info" role="button"><span class="glyphicon glyphicon-plus"></span>   Cr√©er un nouveau contact</a>

{% endblock %}
